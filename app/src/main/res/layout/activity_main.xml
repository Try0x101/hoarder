<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amoled_black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/amoled_dark_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/rawDataHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/rawDataTitleTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Json data"
                            android:textColor="@color/amoled_white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="32px"/>

                        <LinearLayout
                            android:id="@+id/switchAndIconContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <Switch
                                android:id="@+id/dataCollectionSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textOff="OFF"
                                android:textOn="ON"
                                android:thumbTint="@color/amoled_white"
                                android:trackTint="@color/amoled_medium_gray"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rawDataContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GPS Precision:"
                            android:textColor="@color/amoled_white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/amoled_medium_gray"
                            android:layout_marginBottom="16dp">

                            <Spinner
                                android:id="@+id/gpsPrecisionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_margin="2dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@android:color/transparent"
                                android:popupBackground="@color/amoled_dark_gray"
                                android:dropDownWidth="match_parent"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RSSI Precision:"
                            android:textColor="@color/amoled_white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/amoled_medium_gray"
                            android:layout_marginBottom="16dp">

                            <Spinner
                                android:id="@+id/rssiPrecisionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_margin="2dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@android:color/transparent"
                                android:popupBackground="@color/amoled_dark_gray"
                                android:dropDownWidth="match_parent"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Battery Percentage Precision:"
                            android:textColor="@color/amoled_white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/amoled_medium_gray"
                            android:layout_marginBottom="16dp">

                            <Spinner
                                android:id="@+id/batteryPrecisionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_margin="2dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@android:color/transparent"
                                android:popupBackground="@color/amoled_dark_gray"
                                android:dropDownWidth="match_parent"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Network Speed Precision:"
                            android:textColor="@color/amoled_white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/amoled_medium_gray"
                            android:layout_marginBottom="16dp">

                            <Spinner
                                android:id="@+id/networkPrecisionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_margin="2dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@android:color/transparent"
                                android:popupBackground="@color/amoled_dark_gray"
                                android:dropDownWidth="match_parent"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/networkPrecisionInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/amoled_light_gray"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_marginBottom="16dp"
                            android:background="@color/amoled_medium_gray"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Speed Precision:"
                            android:textColor="@color/amoled_white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/amoled_medium_gray"
                            android:layout_marginBottom="16dp">

                            <Spinner
                                android:id="@+id/speedPrecisionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_margin="2dp"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="8dp"
                                android:background="@android:color/transparent"
                                android:popupBackground="@color/amoled_dark_gray"
                                android:dropDownWidth="match_parent"/>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/speedPrecisionInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/amoled_light_gray"
                            android:textSize="14sp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_marginBottom="16dp"
                            android:background="@color/amoled_medium_gray"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:id="@+id/dataTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data: Loading..."
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textColor="@color/amoled_light_gray"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/serverUploadCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/amoled_dark_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/serverUploadHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/serverUploadTitleTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Server Upload (Inactive)"
                            android:textColor="@color/amoled_white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="32px"/>

                        <LinearLayout
                            android:id="@+id/serverUploadSwitchContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <Switch
                                android:id="@+id/serverUploadSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textOff="OFF"
                                android:textOn="ON"
                                android:thumbTint="@color/amoled_white"
                                android:trackTint="@color/amoled_medium_gray"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/serverUploadContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="8dp">

                            <EditText
                                android:id="@+id/serverIpPortEditText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Server IP:Port (e.g., 188.132.234.72:5000)"
                                android:textColor="@color/amoled_white"
                                android:textColorHint="@color/amoled_light_gray"
                                android:textSize="14sp"
                                android:inputType="textUri"
                                android:backgroundTint="@color/amoled_true_blue"
                                android:padding="8dp"
                                android:textCursorDrawable="@drawable/edit_text_cursor_color"/>

                            <Button
                                android:id="@+id/saveServerIpButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:layout_marginStart="8dp"
                                android:backgroundTint="@color/amoled_true_blue"
                                android:textColor="@color/amoled_white"
                                app:cornerRadius="16dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/uploadedBytesTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Uploaded: 0 B"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textColor="@color/amoled_light_gray"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/uploadMessageTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textColor="@color/amoled_red"
                            android:layout_marginBottom="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>