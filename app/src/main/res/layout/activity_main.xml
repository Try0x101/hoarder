<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amoled_black"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/amoled_dark_gray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/rawDataHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/rawDataTitleTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Raw data"
                            android:textColor="@color/amoled_white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:translationX="32px" />

                        <LinearLayout
                            android:id="@+id/switchAndIconContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <Switch
                                android:id="@+id/dataCollectionSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textOff="OFF"
                                android:textOn="ON"
                                android:thumbTint="@color/amoled_white"
                                android:trackTint="@color/amoled_medium_gray" />

                            <!-- ImageView removed
                            <ImageView
                                android:id="@+id/expandCollapseIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:src="@android:drawable/arrow_down_float"
                                android:contentDescription="Toggle data visibility"
                                app:tint="@color/amoled_white" />
                                -->
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rawDataContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/dataTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data: Loading..."
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:textColor="@color/amoled_light_gray" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
