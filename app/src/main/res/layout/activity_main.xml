<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amoled_black"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/telemetrySettingsButton"
        style="@style/SettingsRow"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/telemetrySettingsIcon"
            style="@style/SettingsIcon"
            android:src="@drawable/ic_precision_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/telemetrySettingsIcon"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsTitle"
                android:text="Telemetry Settings" />

            <TextView
                style="@style/SettingsSubtitle"
                android:text="Configure collection and upload" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>